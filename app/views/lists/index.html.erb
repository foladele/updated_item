<h1>Todo List</h1>
<ul>
	<% if @lists.any? %>
		<% @lists.each do |list| %>
	    <li><%= link_to list.name, item_path(list) %></li>
		<%= link_to 'Edit List', edit_list_path(list) %>
		<%= link_to 'Delete', list_path(list), method: :delete %>
		<%end%>
</ul>
	<% else %>
	<h3>No list has been created</h3>
<% end %>
